rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own data in the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow anyone to read the admin access code (for admin sign-in)
    match /config/admin {
        allow get: if true;
    }
  }
}
